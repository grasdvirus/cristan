

{
  "rules": {
    ".read": "true",
    ".write": "auth != null",
    "products": {
      "update": "auth.token.email == 'christianvirus77@gmail.com' || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments'])",
      "create": "auth.token.email == 'christianvirus77@gmail.com'",
      "delete": "auth.token.email == 'christianvirus77@gmail.com'",
      ".read": "true"
    },
    "slides": {
      ".read": "true",
      ".write": "auth.token.email == 'christianvirus77@gmail.com'"
    },
    "contracts": {
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "videos": {
       "update": "auth.token.email == 'christianvirus77@gmail.com' || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'likes'])",
       "create": "auth.token.email == 'christianvirus77@gmail.com'",
       "delete": "auth.token.email == 'christianvirus77@gmail.com'",
      ".read": "true"
    },
    "orders": {
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "subscriptions": {
      ".indexOn": "createdAt",
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "$uid == auth.uid || auth.token.email == 'christianvirus77@gmail.com'",
        ".write": "$uid == auth.uid || auth.token.email == 'christianvirus77@gmail.com'"
      }
    },
     "features": {
      ".indexOn": "createdAt",
      ".read": "true",
      "create": "auth.token.email == 'christianvirus77@gmail.com'",
      "delete": "auth.token.email == 'christianvirus77@gmail.com'",
      "$featureId": {
        "update": "auth.token.email == 'christianvirus77@gmail.com' || (request.auth != null && request.resource.data.title == resource.data.title && request.resource.data.description == resource.data.description)"
      }
    },
    "config": {
       "categories": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "payment": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "subscriptionPlans": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "about": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       }
    }
  }
}
    

    

