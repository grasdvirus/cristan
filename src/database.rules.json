

{
  "rules": {
    ".read": "true",
    ".write": "auth != null",
    "products": {
      ".read": "true",
      ".write": "auth.token.email == 'christianvirus77@gmail.com'"
    },
    "slides": {
      ".read": "true",
      ".write": "auth.token.email == 'christianvirus77@gmail.com'"
    },
    "contracts": {
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "videos": {
      ".read": "true",
      ".write": "auth.token.email == 'christianvirus77@gmail.com'"
    },
    "orders": {
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "subscriptions": {
      ".indexOn": "createdAt",
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "$uid == auth.uid || auth.token.email == 'christianvirus77@gmail.com'",
        ".write": "$uid == auth.uid || auth.token.email == 'christianvirus77@gmail.com'"
      }
    },
     "features": {
      ".indexOn": "createdAt",
      ".read": "true",
      "$featureId": {
         // L'administrateur peut modifier l'ensemble du document.
        "write": "auth != null && auth.token.email == 'christianvirus77@gmail.com'",
        // Tout utilisateur authentifié peut mettre à jour le champ 'feedback'.
        "update": "request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['feedback'])"
      }
    },
    "config": {
       "categories": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "payment": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "subscriptionPlans": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "about": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       }
    }
  }
}
    

    
