

{
  "rules": {
    ".read": "true",
    ".write": "auth != null",
    "products": {
      ".read": "true",
      ".write": "auth.token.email == 'grasdvirus@gmail.com'"
    },
    "slides": {
      ".read": "true",
      ".write": "auth.token.email == 'grasdvirus@gmail.com'"
    },
    "contracts": {
      ".read": "auth.token.email == 'grasdvirus@gmail.com'",
      ".write": "auth != null"
    },
    "videos": {
      ".read": "true",
      ".write": "auth.token.email == 'grasdvirus@gmail.com'"
    },
    "orders": {
      ".read": "auth.token.email == 'grasdvirus@gmail.com'",
      ".write": "auth != null"
    },
    "subscriptions": {
      ".indexOn": "createdAt",
      ".read": "auth.token.email == 'grasdvirus@gmail.com'",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "$uid == auth.uid || auth.token.email == 'grasdvirus@gmail.com'",
        ".write": "$uid == auth.uid || auth.token.email == 'grasdvirus@gmail.com'"
      }
    },
    "config": {
       "categories": {
         ".read": "true",
         ".write": "auth.token.email == 'grasdvirus@gmail.com'"
       },
       "payment": {
         ".read": "true",
         ".write": "auth.token.email == 'grasdvirus@gmail.com'"
       },
       "subscriptionPlans": {
         ".read": "true",
         ".write": "auth.token.email == 'grasdvirus@gmail.com'"
       }
    }
  }
}
    

    
