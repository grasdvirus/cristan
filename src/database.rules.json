

{
  "rules": {
    ".read": "true",
    ".write": "auth != null",
    "products": {
      ".read": "true",
      ".write": "auth.token.email == 'christianvirus77@gmail.com'"
    },
    "slides": {
      ".read": "true",
      ".write": "auth.token.email == 'christianvirus77@gmail.com'"
    },
    "contracts": {
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "videos": {
      ".read": "true",
      ".write": "auth.token.email == 'christianvirus77@gmail.com'"
    },
    "orders": {
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "subscriptions": {
      ".indexOn": "createdAt",
      ".read": "auth.token.email == 'christianvirus77@gmail.com'",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "$uid == auth.uid || auth.token.email == 'christianvirus77@gmail.com'",
        ".write": "$uid == auth.uid || auth.token.email == 'christianvirus77@gmail.com'"
      }
    },
     "features": {
      ".indexOn": "createdAt",
      ".read": "true",
      "$featureId": {
        // Admin can write/delete the entire feature document.
        // Any authenticated user can update a document, but only the 'feedback' field.
        ".write": "(request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['feedback'])) || (auth != null && auth.token.email == 'christianvirus77@gmail.com')"
      }
    },
    "config": {
       "categories": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "payment": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "subscriptionPlans": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       },
       "about": {
         ".read": "true",
         ".write": "auth.token.email == 'christianvirus77@gmail.com'"
       }
    }
  }
}
    

    
